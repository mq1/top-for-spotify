---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen flex flex-col items-center justify-between">
		<div />
		<div>
			<slot />
		</div>
		<footer class="p-4 flex flex-col sm:flex-row gap-x-2 divide-y-2 sm:divide-y-0 sm:divide-x-2">
			<p class="px-2">GPL-3.0-only Licensed</p>
			<p class="px-2">Copyright &copy; 2021-present Manuel Quarneti</p>
			<a href="https://github.com/mq1/top-for-spotify" class="px-2 underline hover:text-green-500 transition transform-gpu ease-in-out">Source code</a>
		</footer>
	</body>
</html>
